{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "buildCommand": "yarn db:generate && yarn build",
  "installCommand": "corepack enable && corepack yarn install --immutable",
  "functions": {
    "api/**/*.js": {
      "runtime": "vercel/node@20.x"
    }
  },
  "rewrites": [
    { "source": "/", "destination": "/api" },
    { "source": "/health", "destination": "/api/health" }
  ]
}
