{
  "version": 2,
  "env": {
    "YARN_IGNORE_ENGINES": "true"
  },
  "installCommand": "yarn install --ignore-engines",
  "buildCommand": "yarn db:generate && yarn build",
  "functions": {
    "api/index.js": {
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api/index.js"
    }
  ]
}
