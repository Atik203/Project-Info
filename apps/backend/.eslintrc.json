{
  "root": true,
  "env": {
    "es2022": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "ignorePatterns": ["dist/**", "src/index.ts", "src/routes/**"],
  "rules": {
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/no-unused-vars": [
      "warn",
      { "argsIgnorePattern": "^_" }
    ],
    "prefer-const": "warn",
    "no-restricted-syntax": [
      "error",
      {
        "selector": "CallExpression[callee.property.name='$queryRawUnsafe']",
        "message": "Use prisma.$queryRaw with parameters (tagged template or placeholders)."
      },
      {
        "selector": "CallExpression[callee.property.name='$executeRawUnsafe']",
        "message": "Use prisma.$executeRaw with parameters (tagged template or placeholders)."
      }
    ]
  }
}
